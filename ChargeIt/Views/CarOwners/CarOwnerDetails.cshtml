@model CarOwnerDetailsViewModel

<h1 class="margin-bottom-40">Car owner: @Model.Name - @Model.Email</h1>

<h1 class="margin-bottom-40 margin-top-40">Cars</h1>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Plate Number</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var car in Model.Cars)
        {
            var index = Model.Cars.IndexOf(car) + 1;
            <tr>
                <th>@index</th>
                <td>@car.PlateNumber</td>
            </tr>
        }

    </tbody>
</table>
