@model CarOwnerDetailsViewModel

<link rel="stylesheet" href="//cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css" />

<h1 class="margin-bottom-40">Car owner: @Model.Name - @Model.Email</h1>

<h1 class="margin-bottom-40 margin-top-40">Cars</h1>

<table id="cars-table" class="table table-striped table-hover">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Plate Number</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var car in Model.Cars)
        {
            var index = Model.Cars.IndexOf(car) + 1;
            <tr>
                <th>@index</th>
                <td>@car.PlateNumber</td>
            </tr>
        }

    </tbody>
</table>

<script src="//cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>

<script>
    $(document).ready( function () {
        $('#cars-table').DataTable();
    } );
</script>
