@model CarOwnerViewModel

<h1 class="margin-bottom-40">Edit car owner</h1>

<form asp-controller="CarOwners" asp-action="EditExistingCarOwner" method="post">
    <input asp-for="Id" hidden/>

    <div class="form-group mb-forms">
        <label asp-for="Name" class="form-label"></label>
        <input type="text" class="form-control form-input" asp-for="Name" placeholder="Name">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group mb-forms">
        <label asp-for="Email" class="form-label"></label>
        <input type="text" class="form-control form-input" asp-for="Email" placeholder="Email">
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Save</button>
    <a type="button" class="btn btn-primary" asp-area="" asp-controller="CarOwners" asp-action="Index">Cancel</a>

</form>